@model FrontendProductosFacturacion.Models.Usuario

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/custom.css" />



<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="auth-card">
        <h2 class="text-center mb-4"><i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión</h2>
        <form asp-action="Login" method="post" novalidate>
            <div class="mb-3">
                <label for="Email" class="form-label">Correo Electrónico</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Contrasena" class="form-label">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Contrasena" type="password" class="form-control" />
                </div>
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-box-arrow-in-right"></i> Ingresar
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center" role="alert">
                @ViewBag.Error
            </div>
        }

        <div class="text-center mt-4">
            <a asp-controller="Usuario" asp-action="Register" class="btn btn-outline-success px-4">
                <i class="bi bi-person-plus-fill me-2"></i>Regístrate aquí
            </a>
        </div>



    </div>
</div>
