@model FrontendProductosFacturacion.Models.Usuario

@{
    ViewData["Title"] = "Registro";
    Layout = null;
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/custom.css" />


<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="auth-card">
        <h2 class="text-center mb-4"><i class="bi bi-person-plus-fill"></i> Registro</h2>
        <form asp-action="Register" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Correo Electrónico</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Contrasena" type="password" class="form-control" />
                </div>
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">
                <i class="bi bi-person-plus-fill"></i> Registrar
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center" role="alert">
                @ViewBag.Error
            </div>
        }
   
        <div class="text-center mt-4">
            <a asp-controller="Usuario" asp-action="Login" class="btn btn-outline-primary px-4">
                <i class="bi bi-box-arrow-in-left me-2"></i>Iniciar Sesión
            </a>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
}
