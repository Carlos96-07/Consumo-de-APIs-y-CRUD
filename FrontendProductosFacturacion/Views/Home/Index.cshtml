@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Section -->
<div class="bg-dark text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">Bienvenido a TechStore</h1>
        <p class="lead">Tu tienda de confianza en computadoras, accesorios y servicios tecnológicos.</p>
        <a href="#productos" class="btn btn-primary btn-lg mt-3">Ver productos</a>
    </div>
</div>

<!-- About Section -->
<section class="py-5 bg-light" id="about">
    <div class="container text-center">
        <h2 class="mb-4">¿Quiénes somos?</h2>
        <p class="lead">En <strong>TechStore</strong> tenemos más de 10 años ofreciendo soluciones tecnológicas con un equipo profesional y productos de alta calidad.</p>
    </div>
</section>

<!-- Servicios -->
<section class="py-5" id="servicios">
    <div class="container">
        <h2 class="text-center mb-5">Nuestros Servicios</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <i class="bi bi-laptop fs-1 text-primary"></i>
                <h4 class="mt-3">Venta de Equipos</h4>
                <p>Computadoras, laptops, tablets y más con garantía asegurada.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-wrench fs-1 text-success"></i>
                <h4 class="mt-3">Soporte Técnico</h4>
                <p>Reparación, mantenimiento y configuración de equipos.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-cloud-arrow-up fs-1 text-info"></i>
                <h4 class="mt-3">Servicios en la nube</h4>
                <p>Instalación, migración y soporte en soluciones cloud.</p>
            </div>
        </div>
    </div>
</section>

<div class="marquee">
    <p>¡Somos la empreza número uno en Tecnológia!</p>
</div>
